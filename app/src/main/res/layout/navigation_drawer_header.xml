<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@mipmap/bosquexd_min"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/header_foto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="10sp"
            android:cropToPadding="false"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_mojo" />

        <TextView
            android:id="@+id/header_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_foto"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text="Desarrollador Android"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_name"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text="thedahnark@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold|italic" />

    </RelativeLayout>

</FrameLayout>